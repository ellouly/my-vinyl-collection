{% extends 'base.html.twig' %}

{% block title %}{{ album.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="title">
            <h1>{{ album.name }}</h1>
        </div>
        <table class="table jacket">
            <tbody>
            <tr>
                <td>{{ album.artist.name }}</td>
            </tr>
            <tr>
                <td>{{ album.year }}</td>
            </tr>
            <tr>
                <td>{{ album.category.name }}</td>
            </tr>
            </tbody>
        </table>
        <div class="play">
            <button><a><i class="las la-play-circle"></i></a></button>
        </div>
    </div>
    <div class="footer">
        <a href="{{ path('album_index') }}"><i class="las la-record-vinyl"></i></a>
        <!-- <a href="{{ path('album_edit', {'id': album.id}) }}"><i class="las la-edit"></i></a> -->

        {{ include('album/_delete_form.html.twig') }}
    </div>
{% endblock %}