{% extends 'base.html.twig' %}

{% block title %}Jukebox{% endblock %}

{% block body %}
<div class="container">
    <div>
        <h1>JUKEBOX</h1>
    </div>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Ann√©e</th>
                <th>Pochette</th>
                <th>Titres</th>
                <th>Lien audio</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for album in albums %}
                <tr>
                    <td>{{ album.name }}</td>
                    <td>{{ album.year }}</td>
                    <td>{{ album.image }}</td>
                    <td>{{ album.titles }}</td>
                    <td>{{ album.linkAudio }}</td>
                    <td>
                        <a href="{{ path('album_show', {'id': album.id}) }}">show</a>
                        <a href="{{ path('album_edit', {'id': album.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
