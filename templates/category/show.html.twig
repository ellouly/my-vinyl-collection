{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="page-container">
        <div class="row container-show">
            <div class="title">
                <h1>{{ category.name }}</h1>
            </div>
            <div class="album-form">
                <h2>Albums</h2>
                <ul>
                    {% for album in category.albums %}
                        <div class="mt-4">
                            <h3><a href="{{ path('album_show',{'id':album.id}) }}">{{ album.name }}</a></h3>
                        </div>
                        <p>({{ album.artist.name }})</p>
                    {% endfor %}

                </ul>
            </div>
        </div>
        <div class="footer">
            <a href="{{ path('category_index') }}"><i class="las la-arrow-circle-left"></i></a>
            <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="las la-user-edit"></i></a>
            <a href="{{ path('home_admin') }}"> <i class="las la-home"></i></a>
        </div>
    </div>
{% endblock %}
