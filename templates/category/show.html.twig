{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="title">
            <h1>{{ category.name }}</h1>
        </div>
        <div class="album-form">
            <h2>Albums</h2>
            <ul>
                {% for album in category.albums %}
                    <h3><a href="{{ path('album_show',{'id':album.id}) }}">{{ album.name }}</a></h3>
                    <p>({{ album.artist.name }})</p>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="footer justify-content-center">
        <a href="{{ path('search') }}"><i class="las la-arrow-circle-left"></i></a>
    </div>
{% endblock %}
